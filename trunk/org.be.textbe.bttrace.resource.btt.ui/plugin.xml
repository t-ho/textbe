		<shortcut label="btt Application" icon="/icons/launch_shortcut_icon.gif" helpContextId="org.be.textbe.btt.launch" modes="run,debug" class="org.be.textbe.bttrace.resource.btt.ui.launch.BttLaunchShortcut" description="Launch a btt model" id="org.be.textbe.btt.launchShortcut">
			<description description="Run btt model" mode="run">
			</description>
			<description description="Debug btt model" mode="debug">
			</description>
			<contextualLaunch>
				<enablement>
					<with variable="selection">
						<count value="1">
						</count>
						<iterate>
							<test property="org.be.textbe.btt.isLaunchable">
							</test>
						</iterate>
					</with>
				</enablement>
			</contextualLaunch>
			<configurationType id="org.be.textbe.bttrace.resource.btt.ui.launchConfigurationType">
			</configurationType>
		</shortcut>
	</extension>
	
